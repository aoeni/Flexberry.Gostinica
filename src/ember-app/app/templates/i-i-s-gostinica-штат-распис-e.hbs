<h3 class="ui header">{{t "forms.i-i-s-gostinica-штат-распис-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-gostinica-штат-распис-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-gostinica-штат-распис-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-gostinica-штат-распис-e.номер-caption")
      data-test-i-i-s-gostinica-штат-распис-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-gostinica-штат-распис-e.период-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.период
      class=(if (v-get validationModel "период" "isInvalid") "error")
      data-test-i-i-s-gostinica-штат-распис-e-период=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "период" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-gostinica-штат-распис-e.гостиница-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.гостиница
      displayAttributeName="наименование"
      autocomplete=true
      relationName="гостиница"
      projection="ГостиницаL"
      title=(t "forms.i-i-s-gostinica-штат-распис-e.гостиница-caption")
      readonly=readonly
      componentName="гостиницаLookup"
      class=(if (v-get validationModel "гостиница" "isInvalid") "error")
      data-test-i-i-s-gostinica-штат-распис-e-гостиница=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "гостиница" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-gostinica-штат-распис-e.тЧШтатРасп-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.тЧШтатРасп
      displayAttributeName="надбавки"
      autocomplete=true
      relationName="тЧШтатРасп"
      projection="ТЧШтатРаспL"
      title=(t "forms.i-i-s-gostinica-штат-распис-e.тЧШтатРасп-caption")
      readonly=readonly
      componentName="тЧШтатРаспLookup"
      class=(if (v-get validationModel "тЧШтатРасп" "isInvalid") "error")
      data-test-i-i-s-gostinica-штат-распис-e-тЧШтатРасп=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧШтатРасп" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-gostinica-штат-распис-e.персонал-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.персонал
      displayAttributeName="фИО"
      autocomplete=true
      relationName="персонал"
      projection="ПерсоналL"
      title=(t "forms.i-i-s-gostinica-штат-распис-e.персонал-caption")
      readonly=readonly
      componentName="персоналLookup"
      class=(if (v-get validationModel "персонал" "isInvalid") "error")
      data-test-i-i-s-gostinica-штат-распис-e-персонал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "персонал" "message")}}
  </div>
</form>
